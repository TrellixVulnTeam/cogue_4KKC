#!/usr/bin/env python

import sys
import cogue.calculator.vasp as vasp
import cogue.crystal.ui_utils as ui_utils
from cogue.crystal.converter import write_cif_P1, write_v_sim

options, args = ui_utils.get_options()
cell = ui_utils.transform_cell(vasp.read_poscar(args[0]), options)
if cell:
    print "Transformed cell is written to %s.cif" % args[0]
    write_cif_P1(cell, args[0] + ".cif")
    write_v_sim(cell, args[0] + ".ascii")
else:
    print "Transformation failed."

